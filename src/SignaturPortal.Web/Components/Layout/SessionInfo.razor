@using SignaturPortal.Application.Interfaces
@inject IUserSessionContext Session

<div class="session-info">
    <h3>Session Debug Info</h3>
    <table>
        <tbody>
            <tr><td><strong>UserId:</strong></td><td>@(Session.UserId?.ToString() ?? "N/A")</td></tr>
            <tr><td><strong>SiteId:</strong></td><td>@(Session.SiteId?.ToString() ?? "N/A")</td></tr>
            <tr><td><strong>ClientId:</strong></td><td>@(Session.ClientId?.ToString() ?? "N/A")</td></tr>
            <tr><td><strong>UserName:</strong></td><td>@Session.UserName</td></tr>
            <tr><td><strong>UserLanguageId:</strong></td><td>@Session.UserLanguageId</td></tr>
            <tr><td><strong>Session Available:</strong></td><td>@(Session.IsInitialized ? "Yes" : "No")</td></tr>
        </tbody>
    </table>
</div>

<style>
    .session-info {
        background: #f5f5f5;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 1rem;
        margin: 1rem 0;
        font-family: monospace;
    }

    .session-info h3 {
        margin-top: 0;
        color: #1a9b89;
        font-size: 1.1rem;
    }

    .session-info table {
        width: 100%;
        border-collapse: collapse;
    }

    .session-info td {
        padding: 0.5rem;
        border-bottom: 1px solid #e0e0e0;
    }

    .session-info td:first-child {
        width: 180px;
        color: #666;
    }

    .session-info td:last-child {
        font-weight: bold;
        color: #1a9b89;
    }
</style>
